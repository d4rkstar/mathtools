extends layout

block content
    h1 Massimo Comune Divisore
    form(action="/mcd/calcolo" method="POST")

        div.input-group
            label(class="control-label") Valori di input
            input(class="form-control" type="text" name="numeri" placeholder="Inserire numeri separati da virgola")

            if error !== ''
                .help-block.has-error #{error}

        button(class="btn btn-primary",type="submit") Calcola



